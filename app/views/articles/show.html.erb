<h1><%= @article.title %></h1>
<p>
  <%= @article.text %>
</p>

<p>
<hr/>
<% @article.comments.each do |comment| %>

<p><%= comment.author %> </p>
<p><%= comment.body %> </p>
	<hr/>

<% end %>


<%= form_for([@article, @article.comments.build]) do |f| %>

	<p>
	  <%= f.label :author %><br/>
	  <%= f.text_field :author %>
	</p>

	<p>
	  <%= f.label :body %><br/>
	  <%= f.text_area :body %>
	</p>

	<p>
	  <%= f.submit %>
	</p>

<% end %>
</p>